@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-container">
    <h1>@ViewData["Title"]</h1>

    <div>
        <div>
            <form class="register-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="register-username-email">
                    <div class="register-username">
                        <label asp-for="Input.Username"></label>
                        <input asp-for="Input.Username" class="input-field form-control" placeholder="Username.." />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="register-email">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="input-field form-control" placeholder="Email..." />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="register-password">
                    <div class="register-password-input">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="input-field form-control" placeholder="Password..." />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="register-password-confirmation">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="input-field form-control" placeholder="Confirm Password..." />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <hr />

                <div class="register-names">
                    <div class="register-password-input">
                        <label asp-for="Input.FirstName"></label>
                        <input asp-for="Input.FirstName" class="input-field form-control" placeholder="First Name..." />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="register-password-confirmation">
                        <label asp-for="Input.LastName"></label>
                        <input asp-for="Input.LastName" class="input-field form-control" placeholder="Last Name..." />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="register-ucn">
                    <label asp-for="Input.UniqueCitizenNumber"></label>
                    <input asp-for="Input.UniqueCitizenNumber" class="form-control" placeholder="Universal Sitizen Number..."/>
                    <span asp-validation-for="Input.UniqueCitizenNumber" class="text-danger"></span>
                </div>
                <hr />
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="~/css/register-style.css" rel="stylesheet" />
}
